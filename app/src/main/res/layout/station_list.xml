<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingBottom="@dimen/list_item_padding_vertical"
    android:paddingLeft="@dimen/list_item_padding_horizontal"
    android:paddingRight="@dimen/list_item_padding_horizontal"
    android:paddingTop="@dimen/list_item_padding_vertical">

    <TextView
        android:id="@+id/reg_price"
        android:layout_width="86dp"
        android:layout_height="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textEnd"
        android:gravity="end"
        android:textSize="24sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/distance"
        tools:text="3.14" />
    <TextView
        android:layout_width="165dp"
        android:layout_height="31dp"
        tools:text="QuickTrip"
        android:textSize="24sp"
        android:id="@+id/station"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="1dp"
        app:layout_constraintLeft_toLeftOf="parent" />
    <TextView
        android:layout_width="156dp"
        android:layout_height="37dp"
        tools:text="1271 Interlaken Pass, Jonesboro, GA"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/station"
        android:layout_marginLeft="-3dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/address"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="98dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:textAlignment="textEnd"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@+id/reg_price"
        tools:text="4 hours ago"
        android:layout_marginRight="-2dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/distance"
        android:layout_width="76dp"
        android:layout_height="20dp"
        android:layout_marginRight="-7dp"
        android:layout_marginTop="16dp"
        android:gravity="end"
        android:textAlignment="textEnd"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2.1mi" />

</android.support.constraint.ConstraintLayout>